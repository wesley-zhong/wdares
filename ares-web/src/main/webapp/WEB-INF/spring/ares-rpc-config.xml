<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

   <mvc:annotation-driven>
        <mvc:message-converters>
            <bean class="com.ares.framework.springhttp.MappingJacksonHttpMessageConverter"/>  
            <bean class="com.ares.framework.springhttp.ProtobufHttpMessageConverter"/>  
        </mvc:message-converters>
    </mvc:annotation-driven> 
        
    <context:component-scan base-package="com.ares.app.service.rpc" />
    
</beans>