<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Flat UI Free 101 Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Loading Bootstrap -->
    <link href="/resources/flatui/css/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

      <!-- Loading Bootstrap -->
    <link href="/resources/flatui/css/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

		  
    <!-- Loading Flat UI -->
    <link href="/resources/flatui/css/flat-ui.min.css" rel="stylesheet">

    <link rel="shortcut icon" href="img/favicon.ico">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
      <script src="js/vendor/html5shiv.js"></script>
      <script src="js/vendor/respond.min.js"></script>
    <![endif]-->
    
  <script src="/resources/flatui/js/vendor/jquery.min.js"></script>
  <script src="/resources/flatui/js/flat-ui.min.js"></script>
  <script src="/resources/flatui/js/assets/js/application.js"></script>
  <script src="/resources/flatui/js/jquery.cookie.js"></script>
  <script type="text/javascript">
	$(function() { 
		$("#login1").click(function() {
     	$.post("/view/UserLoginService/login", {accountID: $("#accountID").val(), pwd: $("#pwd").val()},
	  	    function(data){
	   		console.log(data);
          	$.cookie('session_id',$("#accountID").val());
          	console.log($.cookie('session_id')); 
        	} 
	  	   )	
	   }	
	  );
	})
	</script>
  </head>
  <body>
  <% if(has(error_msg)) { %>
     <p> ${error_msg}</p>
     <% }%>
     <form class = "form-horizontal" role="form" action = "/userlogin" method = "post">
			<div class="form-group">
              <label  for="accountID" class ="col-sm-2 control-label">账号</label>
              <div class="col-sm-6">
                <input type="text" class="form-control" name="accountID" id="accountID" >
              </div>
            </div>
			
			 <div class="form-group">
               <label for="pwd" class="col-sm-2 control-label">密码</label>
               <div class="col-sm-6">
                 <input type="password" class="form-control"  name="pwd"  id="pwd" >
               </div>
            </div>
			<div class="form-group">
			  <div class="col-sm-offset-2 col-sm-10">
			    <button type="submit" class="btn btn-primary" id="login" >Login</button>
			  </div>
            </div>
       </form>

  </body>
</html>